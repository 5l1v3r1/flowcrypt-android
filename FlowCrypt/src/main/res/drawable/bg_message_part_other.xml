<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/light" />
        </shape>
    </item>

    <item>
        <inset
            android:insetBottom="@dimen/width_pgp_message_type_line_inverse"
            android:insetLeft="0dp"
            android:insetRight="@dimen/width_pgp_message_type_line_inverse"
            android:insetTop="@dimen/width_pgp_message_type_line_inverse">
            <shape>
                <stroke
                    android:width="@dimen/width_pgp_message_type_line"
                    android:color="@color/gray" />
            </shape>
        </inset>
    </item>

</layer-list>