<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap xmlns:android="http://schemas.android.com/apk/res/android"
            android:src="@drawable/lock_seamless_bg"
            android:tileMode="repeat" />
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/default_single_dip"
                android:color="@color/light" />
        </shape>
    </item>

    <item>
        <inset
            android:insetBottom="@dimen/width_pgp_message_type_line_inverse"
            android:insetLeft="0dp"
            android:insetRight="@dimen/width_pgp_message_type_line_inverse"
            android:insetTop="@dimen/width_pgp_message_type_line_inverse">
            <shape>
                <stroke
                    android:width="@dimen/width_pgp_message_type_line"
                    android:color="@color/red" />
            </shape>
        </inset>
    </item>

</layer-list>