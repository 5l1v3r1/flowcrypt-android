<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
    </style>

    <style name="AppWidget" />

    <style name="AppWidget.Button">
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppWidget.Button.Transparent">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppWidget.Button.Transparent.MainScreenTopButton">
        <item name="android:textColor">@color/silver_chalice</item>
        <item name="android:textSize">@dimen/default_text_size_big</item>
    </style>

    <style name="AppWidget.Button.MainScreenSignButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_left_main_screen_sign_button</item>
        <item name="android:paddingRight">@dimen/padding_right_main_screen_sign_button</item>
        <item name="android:drawablePadding">@dimen/drawable_padding_main_screen_sign_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/default_text_size_medium</item>
    </style>

    <style name="AppWidget.Button.Raised.MainScreenSignButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/white</item>
    </style>

    <style name="AppWidget.Button.Raised.Green" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/la_palma</item>
    </style>

    <style name="AppWidget.Button.Raised.Grey" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/silver</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceStyle">@style/AppTheme.Preference</item>
        <item name="android:textColor">@color/dove_gray</item>
        <item name="android:textSize">@dimen/default_text_size_big</item>
    </style>

    <style name="AppTheme.Preference" parent="Preference.Material">
        <item name="android:layout">@layout/preference_item</item>
    </style>
</resources>
